---
// src/pages/index.astro
import Calculator from '../components/Calculator';
import '../styles/global.css';
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NODO Drive | Inteligencia de Negocio</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />
</head>
<body class="bg-[#0a0a0a] text-white font-sans antialiased">
  <div class="min-h-screen flex flex-col">
    
    <header class="border-b border-white/10 bg-black/50 backdrop-blur-md sticky top-0 z-50">
      <div class="max-w-2xl mx-auto px-4 py-4 flex justify-between items-center">
        <div>
          <h1 class="text-xl font-extrabold tracking-tighter">NODO</h1>
          <p class="text-[10px] uppercase tracking-widest text-white/40">Drive Intelligence</p>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-xs text-white/60">En línea</span>
        </div>
      </div>
    </header>

    <main class="flex-1 max-w-2xl mx-auto w-full px-4 py-8">
      {/* Esto es lo que "despierta" a la calculadora */}
      <Calculator client:load />
    </main>

    <footer class="p-8 text-center border-t border-white/5 mt-auto">
      <p class="text-[10px] text-white/20">© 2026 NODO STUDIO · v1.0.0 Beta</p>
    </footer>
    
  </div>
</body>
</html>